{
	"version": "2.0.0",
	"tasks": [
		{
            "label": "Build with Clang",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"--debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
	]
}